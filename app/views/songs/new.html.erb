<!-- Validation failure messages -->
<% if @song.errors.any? %>
  <% @song.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Song</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_song" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for title -->
      <div class="form-group">
        <label for="title" class="control-label">
          Title
        </label>

        <input type="text" id="title" name="title" placeholder="Title" class="form-control" value="<%= @song.title %>">
      </div>

      <!-- Label and input for artist_id -->
      <div class="form-group">
        <label for="artist_id" class="control-label">
          Artist
        </label>

        <%= select_tag(:artist_id, options_from_collection_for_select(Artist.all, :id, :artist_name, @song.artist_id), :class => "form-control") %>
      </div>

      <!-- Label and input for genre_id -->
      <div class="form-group">
        <label for="genre_id" class="control-label">
          Genre
        </label>

        <input type="text" id="genre_id" name="genre_id" placeholder="Genre" class="form-control" value="<%= @song.genre_id %>">
      </div>

      <!-- Label and input for decade -->
      <div class="form-group">
        <label for="decade" class="control-label">
          Decade
        </label>

        <input type="text" id="decade" name="decade" placeholder="Decade" class="form-control" value="<%= @song.decade %>">
      </div>

      <!-- Label and input for year -->
      <div class="form-group">
        <label for="year" class="control-label">
          Year
        </label>

        <input type="text" id="year" name="year" placeholder="Year" class="form-control" value="<%= @song.year %>">
      </div>

      <button class="btn btn-success">
        Create Song
      </button>
      or
      <a href="/songs">Cancel</a>
    </form>
  </div>
</div>
