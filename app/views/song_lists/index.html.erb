<div class="page-header">
  <h1>
    Song lists
    <a href="/song_lists/new" class="btn btn-lg btn-success">New Song list</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Song</th>
        <th>Playlist</th>
        <th>Actions</th>
      </tr>

      <% @song_lists.each do |song_list| %>
      <tr>
        <td><%= song_list.song.title %></td>
        <td><%= song_list.playlist_id %></td>
        <td>
          <a href="/song_lists/<%= song_list.id %>" class="btn btn-primary">Show</a>
          <a href="/song_lists/<%= song_list.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_song_list/<%= song_list.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
