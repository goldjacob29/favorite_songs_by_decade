<div class="page-header">
  <h3>Song List #<%= @song_list.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Song</dt>
      <dd>
        <% if @song_list.song.present? %>
          <a href="/songs/<%= @song_list.song_id %>">
            <%= @song_list.song.title %>
          </a>
        <% end %>
      </dd>

      <dt>Playlist</dt>
      <dd>
        <% if @song_list.playlist.present? %>
          <a href="/playlists/<%= @song_list.playlist_id %>">
            <%= @song_list.playlist.user_id %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/song_lists" class="btn btn-primary">
        Back
      </a>
      <a href="/song_lists/<%= @song_list.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_song_list/<%= @song_list.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
